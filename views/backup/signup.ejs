<%- include layout/header.ejs %>
     
      <form method="post" action="/signup">
         <% if(typeof(errorMessage) !== 'undefined') {%>
         <span><%= errorMessage %></span>
         <% } %>
         <div class="container">
            <h2>Register Form</h2>
            <div class="row">
               <div class="input-field col l6 offset-l3">
                  <input type="text" name="username" id="username" class="validate" required="true">
                  <label>Username</label>
               </div>
            </div><!-- row -->

            <div class="row">
               <div class="input-field col l6 offset-l3">
                  <input type="password" name="password" id="password" class="validate" required="true">
                  <label>Password</label>
               </div>
            </div>

            <div class="row">
               <div class="col l6 offset-l3 right-align">
                  <button class="waves-effect waves-light btn" type="submit" name="signup" id="signup">Register</button>
                  <a class="waves-effect waves-light btn" href="/signin" title="sign in">sign in</a>
               </div>
            </div>
            
         </div><!-- Container -->
      </form>
   