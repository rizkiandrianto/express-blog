<body class="login-page">
   <div class="login-box">
      <div class="login-logo">
        <a href="/"><b>Admin</b>LTE</a>
      </div><!-- /.login-logo -->
   <div class="login-box-body">
     <form method="post" action="/signin">
       <div class="form-group has-feedback">
         <input type="text" class="form-control" placeholder="Email" name="username" id="username" />
         <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
       </div>
       <div class="form-group has-feedback">
         <input type="password" class="form-control" placeholder="Password" name="password" id="password" />
         <span class="glyphicon glyphicon-lock form-control-feedback"></span>
       </div>

      <% if(typeof(errorMessage) !== 'undefined') {%>
         <p class="login-box-msg text-red"><%= errorMessage %></p>
      <% } %>

       <div class="row">
         <div class="col-xs-8">    
           <div class="checkbox icheck">
             <label>
               <input type="checkbox"> Remember Me
             </label>
           </div>                        
         </div><!-- /.col -->
         <div class="col-xs-4">
           <button type="submit" class="btn btn-primary btn-block btn-flat" name="signin" id="signin">Sign In</button>
         </div><!-- /.col -->
       </div>
     </form>
     

